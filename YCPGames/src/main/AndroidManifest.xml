<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ycp.cs481.ycpgames"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.ycp.cs481.ycpgames.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.ycp.cs481.ycpgames.TicTacToeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tic_tac_toe"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/NoActionBar" >
        </activity>
        <activity
            android:name="edu.ycp.cs481.ycpgames.DotsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_dots"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/NoActionBar" >
        </activity>
        <activity
            android:name="edu.ycp.cs481.ycpgames.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="edu.ycp.cs481.ycpgames.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.ycp.cs481.ycpgames.MainActivity"/>

        </activity>
    </application>

</manifest>
