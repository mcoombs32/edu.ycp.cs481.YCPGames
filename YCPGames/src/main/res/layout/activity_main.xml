
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/menubackgroud">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TicTacToeButton"
        android:background="@drawable/tictactoebutton"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DotsButton"
        android:background="@drawable/dotsbutton"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckersButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/checkersbutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SettingsButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/settingsbutton" />

</LinearLayout>